@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <div class="hero-content fade-in-up">
                    <h1 class="hero-title">
                        <i class="fas fa-graduation-cap"></i>
                        Hệ Thống Quản Lý Sinh Viên
                    </h1>
                    <p class="hero-subtitle">
                        Giải pháp quản lý sinh viên và đăng ký học phần hiện đại,
                        tiện lợi và thân thiện với người dùng
                    </p>
                    <div class="hero-buttons fade-in-up-delay-1">
                        @if (string.IsNullOrEmpty(Context.Session.GetString("IsLoggedIn")))
                        {
                            <a asp-controller="Auth" asp-action="Login" class="btn btn-light btn-lg">
                                <i class="fas fa-sign-in-alt"></i> Đăng nhập ngay
                            </a>
                        }
                        else
                        {
                            <a asp-controller="HocPhan" asp-action="Index" class="btn btn-light btn-lg">
                                <i class="fas fa-book"></i> Đăng ký học phần
                            </a>
                        }
                        <a asp-controller="SinhVien" asp-action="Index" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-users"></i> Quản lý sinh viên
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
