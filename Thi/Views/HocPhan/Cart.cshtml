@model IEnumerable<Thi.Models.HocPhan>

@{
    ViewData["Title"] = "Giỏ hàng - Học phần đã chọn";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0">
                            <i class="fas fa-shopping-cart"></i> @ViewData["Title"]
                        </h4>
                        <small class="text-muted">Sinh viên: <strong>@ViewBag.UserName</strong></small>
                    </div>
                    <div>
                        <a asp-action="Index" class="btn btn-outline-primary me-2">
                            <i class="fas fa-arrow-left"></i> Quay lại đăng ký
                        </a>
                        @if (Model.Any())
                        {
                            <button class="btn btn-danger me-2" onclick="clearCart()">
                                <i class="fas fa-trash-alt"></i> Xóa tất cả
                            </button>
                            <button class="btn btn-success" onclick="saveRegistration()">
                                <i class="fas fa-save"></i> Lưu đăng ký
                            </button>
                        }
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Mã học phần</th>
                                        <th>Tên học phần</th>
                                        <th>Số tín chỉ</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">@Html.DisplayFor(modelItem => item.MaHP)</span>
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.TenHP)</td>
                                            <td>
                                                <span class="badge bg-info">@Html.DisplayFor(modelItem => item.SoTinChi) tín chỉ</span>
                                            </td>
                                            <td>
                                                <button class="btn btn-outline-danger btn-sm" onclick="removeFromCart('@item.MaHP')">
                                                    <i class="fas fa-times"></i> Xóa
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <th colspan="2">Tổng cộng:</th>
                                        <th>
                                            <span class="badge bg-success fs-6">
                                                @Model.Sum(x => x.SoTinChi ?? 0) tín chỉ
                                            </span>
                                        </th>
                                        <th>@Model.Count() học phần</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-cart text-muted" style="font-size: 4rem;"></i>
                            <h5 class="text-muted mt-3">Giỏ hàng trống</h5>
                            <p class="text-muted">Bạn chưa chọn học phần nào để đăng ký.</p>
                            <a asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Chọn học phần
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        function removeFromCart(maHP) {
            if (confirm('Bạn có chắc chắn muốn xóa học phần này khỏi giỏ hàng?')) {
                $.ajax({
                    url: '@Url.Action("RemoveFromCart", "HocPhan")',
                    type: 'POST',
                    data: { maHP: maHP },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra. Vui lòng thử lại.');
                    }
                });
            }
        }

        function clearCart() {
            if (confirm('Bạn có chắc chắn muốn xóa tất cả học phần khỏi giỏ hàng?')) {
                $.ajax({
                    url: '@Url.Action("ClearCart", "HocPhan")',
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra. Vui lòng thử lại.');
                    }
                });
            }
        }

        function saveRegistration() {
            // Điều hướng đến trang lưu đăng ký (sẽ implement trong câu 5)
            alert('Chức năng lưu đăng ký sẽ được thực hiện trong câu 5.');
        }
    </script>
}