@model Thi.Models.SinhVien

@{
    ViewData["Title"] = "Chi tiết sinh viên";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(Model.Hinh))
                            {
                                <img src="@Model.Hinh" alt="Avatar" class="img-thumbnail mb-3" style="width: 200px; height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-secondary d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 200px; height: 200px;">
                                    <i class="fas fa-user text-white fa-4x"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MaSV)</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-primary fs-6">@Html.DisplayFor(model => model.MaSV)</span>
                                </dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.HoTen)</dt>
                                <dd class="col-sm-8">
                                    <h5 class="text-primary">@Html.DisplayFor(model => model.HoTen)</h5>
                                </dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.GioiTinh)</dt>
                                <dd class="col-sm-8">
                                    @if (Model.GioiTinh == "Nam")
                                    {
                                        <span class="badge bg-primary">
                                            <i class="fas fa-mars"></i> Nam
                                        </span>
                                    }
                                    else if (Model.GioiTinh == "Nữ")
                                    {
                                        <span class="badge bg-pink">
                                            <i class="fas fa-venus"></i> Nữ
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@Html.DisplayFor(model => model.GioiTinh)</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NgaySinh)</dt>
                                <dd class="col-sm-8">
                                    <i class="fas fa-calendar-alt"></i>
                                    @Html.DisplayFor(model => model.NgaySinh)
                                </dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NganhHoc)</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-success fs-6">
                                        <i class="fas fa-graduation-cap"></i>
                                        @Html.DisplayFor(model => model.NganhHoc.TenNganh)
                                    </span>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12 text-center">
                            <a asp-action="Edit" asp-route-id="@Model.MaSV" class="btn btn-warning me-2">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.MaSV" class="btn btn-danger me-2">
                                <i class="fas fa-trash"></i> Xóa
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-list"></i> Danh sách
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-pink {
        background-color: #e91e63 !important;
    }
</style>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}