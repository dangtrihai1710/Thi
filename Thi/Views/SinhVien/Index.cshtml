@model IEnumerable<Thi.Models.SinhVien>

@{
    ViewData["Title"] = "Danh sách sinh viên";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Thêm sinh viên
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.MaSV)</th>
                                    <th>Hình ảnh</th>
                                    <th>@Html.DisplayNameFor(model => model.HoTen)</th>
                                    <th>@Html.DisplayNameFor(model => model.GioiTinh)</th>
                                    <th>@Html.DisplayNameFor(model => model.NgaySinh)</th>
                                    <th>@Html.DisplayNameFor(model => model.NganhHoc)</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.MaSV)</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Hinh))
                                            {
                                                <img src="@item.Hinh" alt="Avatar" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="bg-secondary d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                    <i class="fas fa-user text-white"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                                        <td>
                                            @if (item.GioiTinh == "Nam")
                                            {
                                                <span class="badge bg-primary">Nam</span>
                                            }
                                            else if (item.GioiTinh == "Nữ")
                                            {
                                                <span class="badge bg-pink">Nữ</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Khác</span>
                                            }
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
                                        <td>@Html.DisplayFor(modelItem => item.NganhHoc.TenNganh)</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.MaSV" class="btn btn-info btn-sm" title="Chi tiết">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.MaSV" class="btn btn-warning btn-sm" title="Sửa">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.MaSV" class="btn btn-danger btn-sm" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (!Model.Any())
                    {
                        <div class="text-center py-4">
                            <h5 class="text-muted">Chưa có sinh viên nào</h5>
                            <a asp-action="Create" class="btn btn-primary mt-2">Thêm sinh viên đầu tiên</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-pink {
        background-color: #e91e63 !important;
    }
</style>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}